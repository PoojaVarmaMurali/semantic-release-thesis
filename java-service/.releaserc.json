{
  "tagFormat": "java-v${version}",
  "branches": [
    "main",
    {
      "name": "develop",
      "channel": "dev",
      "prerelease": true
    }
  ],
  "plugins": [
    [
      "@semantic-release/commit-analyzer",
      {
        "preset": "conventionalcommits"
      }
    ],
    "@semantic-release/release-notes-generator",
    [
      "@semantic-release/changelog",
      {
        "changelogFile": "CHANGELOG.md"
      }
    ],
    [
      "@semantic-release/exec",
      {
       "prepareCmd": "mvn versions:set -DnewVersion=${nextRelease.version} -DgenerateBackupPoms=false && python3 ../core/parse_commit.py && RELEASE_VERSION='${nextRelease.version}' python3 ../core/generate_release_notes.py"

      }

    ],
    [
      "@semantic-release/git",
      {
        "assets": ["pom.xml", "CHANGELOG.md", "RELEASE_NOTES.md"],
        "message": "chore(release): java-v${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
      }
    ],
    "@semantic-release/github"
  ]
}
